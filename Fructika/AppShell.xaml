       xmlns:local="clr-namespace:Fructika.Views"
       RouteHost="companyname.com"
       RouteScheme="app"
       Route="fructika"
       FlyoutBehavior="Flyout"
       Title="Fructika"
       x:Class="Fructika.AppShell"
       Navigating="OnShellNavigating">

